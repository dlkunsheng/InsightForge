<Window x:Class="InsightForge.Playground.ContainerControls.UniformGridDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InsightForge.Playground.ContainerControls"
        mc:Ignorable="d"
        Title="UniformGridDemo" Height="450" Width="800">
    <Grid>
        <TextBlock>UniformGrid Demo</TextBlock>
        <UniformGrid Rows="2" Columns="3">
            <Button Content="1"/>
            <Button Content="2"/>
            <Button Content="3"/>
            <Button Content="4"/>
            <Button Content="5"/>
            <Button Content="6"/>
        </UniformGrid>
    </Grid>
</Window>
